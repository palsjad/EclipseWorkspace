package com.wbl.practice;

public class JailBreak {

	
	
	
	
	public static void main(String args[] ) {
		
		int jump = 5;
		int slide = 1;
		int[]wallHeight  = {9,10};
		
		
		JailBreak jb = new JailBreak();
		
		
		jb.totalJumps(jump,slide,wallHeight);
		
 	}
	
	
	public int totalJumps(int jump, int slide, int[] wallHeight) {
		
		int total = 0;
		
		
		int temp = 0;
 
	for(int i = 0, wall = 0; i < wallHeight.length; i++)	{
		

		 wall = wallHeight[i];
		 
			System.out.println("wall  : " + wall );

	  

		for (total = 0; jump <= wall; total++ ) {
			
			temp = wall - (jump - slide);  // temp = 9-4 : 5
			
			System.out.println("temp : " + temp);
			System.out.println("wall : " + wall);

			wall = temp;
		//	temp = 0;
		 
			
			System.out.println("temp after : " + temp);

				
		}	
		
		System.out.println("total : " + total);

		}
		
		
		
		
		
		return total;
		
		
	}
	
}
