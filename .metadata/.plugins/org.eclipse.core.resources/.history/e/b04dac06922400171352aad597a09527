<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
	<Properties>
		<Property name="basePath">C:\\QA\\eclipseLogs</Property>
	</Properties>

	<Appenders>
		<RollingFile name="FileLogger" filename="$(basePath)/app-info.log" filePattern="$(basePath)/app-info-%d{HH:mm:ss.SSS}.log">
			<PatternLayout>
				<pattern>%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n
				</pattern>

			</PatternLayout>
        <Policies>
        <TimeBasedTrigeringPolicy interval = "1" modulate = "true" />
        </Policies>
		</RollingFile>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout patternn="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />

		</Console>
	</Appenders>
	<Loggers>
		<Root level="all" additivity="false">
			<AppenderRef ref="Console" level="all" />
			<AppenderRef ref="fileLogger" level="debug" />

		</Root>
	</Loggers>
</Configuration>